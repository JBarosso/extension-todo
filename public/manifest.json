{
  "manifest_version": 3,
  "name": "Todo Manager",
  "version": "1.0.0",
  "description": "Gestionnaire de t√¢ches avec onglets Perso, GitHub et Gmail",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "notifications",
    "alarms",
    "identity"
  ],
  "oauth2": {
    "client_id": "957386818024-tb2gemsgan4of6qs9q36q0e2qvhrqmdl.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/gmail.send"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Toggle Todo Manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}